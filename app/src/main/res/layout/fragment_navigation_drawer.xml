<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:facebook="http://schemas.android.com/apk/res-auto"
    android:background="@android:color/white">


    <RelativeLayout
        android:id="@+id/nav_header_container"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:layout_alignParentTop="true"
        android:background="@android:color/white">



        <com.facebook.login.widget.ProfilePictureView

            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp"
            android:scaleType="fitCenter"
            android:src="@drawable/defaultprofile"
            android:id="@+id/profilepictureslide" />

        <TextView
            android:id="@+id/textview_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_above="@+id/textview_name"
            android:layout_alignEnd="@+id/textview_name"
            android:layout_alignRight="@+id/textview_name"
            android:text="ID :"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/textview_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_centerVertical="true"
            android:layout_marginLeft="11dp"
            android:layout_marginStart="11dp"
            android:layout_toEndOf="@+id/profilepictureslide"
            android:layout_toRightOf="@+id/profilepictureslide"
            android:text="Name :"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/textValuename"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/textview_id"
            android:layout_toRightOf="@+id/textview_id"
            android:text="Default"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/textValueID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"


            android:layout_alignBaseline="@+id/textview_id"
            android:layout_alignBottom="@+id/textview_id"
            android:layout_toEndOf="@+id/textview_id"
            android:layout_toRightOf="@+id/textview_id"
            android:text="Default"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/Signout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="15dp"
            android:text="Sign Out"
            android:textSize="14sp" />

    </RelativeLayout>


    <android.support.v7.widget.RecyclerView
        android:id="@+id/drawerList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/nav_header_container"
        android:layout_marginTop="15dp"
        android:background="#FFFFFF"

        />


</RelativeLayout>